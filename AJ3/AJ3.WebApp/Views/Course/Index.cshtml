@model IEnumerable<AJ3.WebApp.Models.Course.CourseMasterListViewModel>
@{
    ViewData["Title"] = "Index";
}
@section style{
<link href="assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
    }
<div class="content d-flex flex-column py-lg-3 flex-column-fluid" id="kt_content">
    <div class="subheader py-3 py-lg-2 subheader-transparent" id="kt_subheader">
        <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <div class="d-flex align-items-center mr-1">
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <h2 class="d-flex align-items-center text-dark font-weight-bold my-1 mr-3">Course Master list</h2>
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold my-2 p-0">
                        <li class="breadcrumb-item text-muted">
                            <a class="text-muted active">course</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!--begin::Toolbar-->
            <div class="d-flex align-items-center flex-wrap">
                <!--begin::Button-->
                <button onclick="CourseView.getCourseForm(0)" type="button" class="btn btn-light-primary btn-fixed-height font-weight-bold px-2 px-lg-5 mr-2">
                    <i class="fas fa-car-crash svg-icon svg-icon-lg"></i>
                    <span class="d-none d-md-inline">New Course</span>
                </button>
                <!--end::Button-->
            </div>
            <!--end::Toolbar-->
        </div>
    </div>
    <div class="d-flex flex-column-fluid">
        <div class="container">
            <div class="mb-7">
                <div class="row align-items-center">
                    <div class="col-lg-9 col-xl-8">
                        <div class="row align-items-center">
                            <div class="col-1">
                            </div>
                            <div class="col-md-10 my-4 my-md-0">
                                <div class="d-flex align-items-center">
                                    <label class="mr-3 mb-0 d-none d-md-block "> Category:</label>
                                    <select onchange="CourseView.getAvailableCourses(this)" asp-items="(SelectList)ViewBag.CourseCategories" class="form-control" id="courseCategories">
                                        <option value="0">All</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="card card-custom">
                <div class="card-body" id="dvCourseMasterList">
                    @await Component.InvokeAsync("CourseMasterList",new {courseCategoryId=(int)ViewBag.CourseCategoryId}).ConfigureAwait(false)
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="courseFormModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <img src="assets/media/logos/AJ3.jpg" height="20" alt="" />Course Form
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body" id="courseFormModalBody">
            </div>
        </div>
    </div>
</div>
@section scripts
{
    @await Html.PartialAsync("_AjaxUnobtrusiveScripts")
<script src="assets/plugins/custom/datatables/datatables.bundle.js"></script>
<script src="js/course/course-view.js"></script>
    }