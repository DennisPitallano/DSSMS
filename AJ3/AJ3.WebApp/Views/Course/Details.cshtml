<div class="modal fade" id="orderPaymentFormModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdrop" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <img src="assets/media/logos/AJ3.jpg" height="20" alt="" />Payment Form
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body" id="orderPaymentFormModalBody">
            </div>
        </div>
    </div>
</div>
@section scripts {
    @await Html.PartialAsync("_AjaxUnobtrusiveScripts")
<script src="js/student/profile.js"></script>
}

