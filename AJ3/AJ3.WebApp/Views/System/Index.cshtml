@model AJ3.WebApp.Models.Setting.CompanyProfileViewModel
@{
    ViewData["Title"] = "Index";
}
<div class="card card-custom card-sticky" id="kt_page_sticky_card">
    <div class="card-header">
        <div class="card-title">
            <h3 class="card-label">
                System <i class="mr-2"></i>
                <small class="">Setup</small>
            </h3>
        </div>
        <div class="card-toolbar">
            <a href="/" class="btn btn-light-primary font-weight-bolder mr-2">
                <i class="ki ki-long-arrow-back icon-sm"></i>
                Back
            </a>
            <div class="btn-group">
                <button type="submit" form="kt_form" class="btn btn-primary font-weight-bolder">
                    <i class="fas fa-save "></i>
                    Save Form
                </button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <!--begin::Form-->
        <form class="form" id="kt_form" data-ajax-method="post" data-ajax="true" asp-action="SaveCompanyProfile" asp-controller="System"
              data-ajax-begin="SystemSetupView.OnBegin"
              data-ajax-success="SystemSetupView.OnSuccessSave">
            <input type="hidden" asp-for="Id"/>
            <div class="row">
                <div class="col-xl-2"></div>
                <div class="col-xl-8">
                    <div class="my-5">
                        <h3 class=" text-dark font-weight-bold mb-10">Company Info:</h3>
                        <div class="form-group row">
                            <label class="col-3">Name</label>
                            <div class="col-9">
                                <input class="form-control form-control-solid" type="text" asp-for="Name"/>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3">Address</label>
                            <div class="col-9">
                                <textarea class="form-control form-control-solid" asp-for="Address"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3">Phone Number</label>
                            <div class="col-9">
                                <div class="input-group input-group-solid">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="la la-phone"></i></span></div>
                                    <input type="text" class="form-control form-control-solid" asp-for="PhoneNumber"/>
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                <span class="form-text text-muted">We'll never share your email with anyone else.</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3">Mobile Number</label>
                            <div class="col-9">
                                <div class="input-group input-group-solid">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="la la-mobile"></i></span></div>
                                    <input type="text" class="form-control form-control-solid" asp-for="MobileNumber"/>
                                </div>
                                <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                <span class="form-text text-muted">We'll never share your email with anyone else.</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3">Tag Line</label>
                            <div class="col-9">
                                <div class="input-group input-group-solid">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="la la-quote-left"></i></span></div>
                                    <input type="text" class="form-control form-control-solid" asp-for="TagLine"/>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3">Manager</label>
                            <div class="col-9">
                                <div class="input-group input-group-solid">
                                    <input type="text" class="form-control form-control-solid" asp-for="Manager"/>
                                    <div class="input-group-append">
                                        <span class="input-group-text">
                                            <i class="la la-user-tie"></i>
                                        </span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="separator separator-dashed my-10"></div>
                </div>
                <div class="col-xl-2"></div>
            </div>
        </form>
        <!--end::Form-->
    </div>
</div>
@section scripts
{
    @await Html.PartialAsync("_AjaxUnobtrusiveScripts")
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="js/system/system-view.js"></script>
}
