@model IEnumerable<AJ3.WebApp.Models.Report.OrderPaymentReportListViewModel>
<!--end: Search Form-->
<table class="table table-sm">
    <thead>
        <tr>
            <th scope="col">OR NUMBER</th>
            <th scope="col">ORDER NUMBER</th>
            <th scope="col">STUDENT</th>
            <th scope="col">PAID DATE</th>
            <th scope="col">RECEIVED BY</th>
            <th class="text-right" scope="col">AMOUNT PAID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <th scope="row">@payment.OrNumber</th>
                <td>@payment.OrderNumber</td>
                <td>@payment.FullName</td>
                <td>@payment.PaymentDate.ToString("MMM dd, yyyy")</td>
                <td>@payment.CreatedBy</td>
                <td class="text-right">@payment.DisplayAmount</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td class="font-italic">Total Payment</td>
            <td class="text-right" colspan="5">
                <span class="border-top border-2 font-weight-bold">
                    @ViewBag.TotalPaidAmount
                </span>
            </td>
        </tr>
        <tr>
            <td class="font-italic">Total Discount</td>
            <td class="text-right" colspan="5">
                <span class="border-top border-2 font-weight-bold text-danger">
                    (@ViewBag.TotalPaidDiscount)
                </span>
            </td>
        </tr>
        <tr>
            <td class="font-italic">Total Collection</td>
            <td class="text-right" colspan="5">
                <span class="border-top border-2 font-weight-bolder">
                    @ViewBag.TotalPaidCollection
                </span>
            </td>
        </tr>
    </tfoot>
</table>